{
  "name": "xb-ui",
  "version": "0.0.1",
  "description": "SchoolPal's UI components",
  "main": "lib/xb-ui.common.js",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "create:component": "node tools/create-component",
    "create:componentMd": "node tools/create-componentMd",
    "dist:style": "node build/gen-cssfile && gulp --gulpfile packages/theme-chalk/gulpfile.js && cp-cli packages/theme-chalk/dist lib/theme-chalk",
    "dist:component": "webpack --config build/webpack.component.js",
    "dist": "webpack --config build/webpack.common.js && webpack --config build/webpack.component.js && npm run dist:style",
    "format": "prettier --write \"packages/**/*.js\" \"packages/**/*.vue\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,json,css,vue}": [
      "prettier --write",
      "git add"
    ]
  },
  "style": "lib/theme-chalk/index.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SchoolPalCoder/Xb-Basic-Components.git"
  },
  "keywords": [
    "vue",
    "ui",
    "components"
  ],
  "author": "SchoolPal Coder",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SchoolPalCoder/Xb-Basic-Components/issues"
  },
  "homepage": "https://github.com/SchoolPalCoder/Xb-Basic-Components#readme",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-plugin-syntax-jsx": "^6.8.0",
    "babel-plugin-transform-vue-jsx": "^3.3.0",
    "babel-preset-es2015": "^6.14.0",
    "cp-cli": "^1.0.2",
    "css-loader": "^0.28.7",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-clean-css": "^3.9.3",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.1",
    "html-loader": "^0.5.1",
    "husky": "^0.14.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.3",
    "postcss-loader": "0.11.1",
    "prettier": "^1.14.2",
    "progress-bar-webpack-plugin": "^1.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "vue-loader": "^15.2.4",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.0.7",
    "webpack-dev-server": "^3.1.4",
    "webpack-node-externals": "^1.6.0"
  },
  "peerDependencies": {
    "vue": "^2.5.2"
  },
  "dependencies": {
    "element-ui": "^2.4.6",
    "vuepress": "^0.14.2"
  }
}
