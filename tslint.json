{
    "defaultSeverity": "warning",
    "extends": ["tslint:recommended"],
    "linterOptions": {
        "exclude": ["node_modules/**"]
    },
    "rules": {
        "quotemark": false,
        "no-namespace": false,
        "indent": [true, "spaces", 2],
        "interface-name": false,
        "ordered-imports": false,
        "max-classes-per-file": false,
        "semicolon": [true, "always", "ignore-interfaces"],
        "trailing-comma": [true, "never"],
        "arrow-parens": true,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": [true, 2], // 禁止连续超过两行空行
        "no-trailing-whitespace": true, // 尾部空格检测
        "typedef-whitespace": true, // 类型声明的冒号之前是否需要空格
        "member-access": false, //类成员必须声明 private public ....
        "no-invalid-template-strings": true, // 警告在非模板字符中使用${
        "prefer-const": true, // const偏好
        "no-bitwise": false, // 允许位运算
        "no-var-keyword": true // 不允许关键字var
    }
}
